@model List<BlogSite.ViewModels.BlogModel>

@*slider altındaki yer*@
<section>
    <!-- Popular news  header-->
    <div class="popular__news-header">
        <div class="container">
            <div class="row no-gutters">
                @*800*600 olan yer*@
                <div class="col-md-8 ">
                    <div class="card__post-carousel">
                        @foreach (var item in Model.Take(6))
                        {
                            <div class="item">
                                <!-- Post Article -->
                                <div class="card__post">
                                    <div class="card__post__body">
                                        <a target="_blank" href="@Url.Action("BlogDetail",  new { id = item.Id })">
                                            <img src="@item.ImageUrl" class="img-fluid" alt="@item.Title">
                                        </a>
                                        <div class="card__post__content bg__post-cover">
                                            <div class="card__post__category">
                                                @item.CategoryName
                                            </div>
                                            <div class="card__post__title">
                                                <h2>
                                                    <a target="_blank" href="@Url.Action("BlogDetail",  new { id = item.Id })">
                                                        @Html.Raw(item.Title)
                                                    </a>
                                                </h2>
                                            </div>
                                            <div class="card__post__author-info">
                                                <ul class="list-inline">
                                                    <li class="list-inline-item">
                                                        <a target="_blank" href="@Url.Action("BlogDetail",  new { id = item.Id })">
                                                            Ekrem Özmen
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <span>
                                                            @item.Date.Value.ToString("d")
                                                        </span>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <span>
                                                            <i class="fa fa-binoculars"></i>
                                                            @item.BlogClick
                                                        </span>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>}
                    </div>
                </div>
                @*800*600 olan yer bitiş*@


                @*800*600 yanındaki 2 tane*@

                <div class="col-md-4">
                    <div class="popular__news-right">
                        <!-- Post Article -->
                        @foreach (var item in Model.Skip(6).Take(2))
                        {
                            <div class="card__post ">
                                <div class="card__post__body card__post__transition">
                                    <a target="_blank" href="@Url.Action("BlogDetail",  new { id = item.Id })">
                                        <img src="@item.ImageUrl" class="img-fluid" alt="@item.Title">
                                    </a>
                                    <div class="card__post__content bg__post-cover">
                                        <div class="card__post__category">
                                            @item.CategoryName
                                        </div>
                                        <div class="card__post__title">
                                            <h5>
                                                <a target="_blank" href="@Url.Action("BlogDetail",  new { id = item.Id })">
                                                    @Html.Raw(item.Title)
                                                </a>
                                            </h5>
                                        </div>
                                        <div class="card__post__author-info">
                                            <ul class="list-inline">
                                                <li class="list-inline-item">
                                                    <a target="_blank" href="@Url.Action("BlogDetail",  new { id = item.Id })">
                                                        Ekrem Özmen
                                                    </a>
                                                </li>
                                                <li class="list-inline-item">
                                                    <span>
                                                        @item.Date.Value.ToString("d")
                                                    </span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        }
                        <!-- Post Article -->
                    </div>
                </div>
                @*800*600 yanındaki 2 tane bitiş*@
            </div>
        </div>
    </div>
    <!-- End Popular news header-->
    <!-- Popular news carousel -->
    <div class="popular__news-header-carousel">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="top__news__slider">
                        @foreach (var item in Model.Skip(8))
                        {
                            <div class="item">
                                <!-- Post Article -->
                                <div class="article__entry">
                                    <div class="article__image">
                                        <a target="_blank" href="@Url.Action("BlogDetail",  new { id = item.Id })">
                                            <img src="@item.ImageUrl" alt="@item.Title" class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="article__content">
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <span class="text-primary">
                                                    Ekrem Özmen
                                                </span>
                                            </li>

                                            <li class="list-inline-item">
                                                <span>
                                                    @item.Date.Value.ToString("d")
                                                </span>
                                            </li>
                                        </ul>
                                        <h5>
                                            <a target="_blank" href="@Url.Action("BlogDetail",  new { id = item.Id })">
                                                @Html.Raw(item.Title)
                                            </a>
                                        </h5>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Popular news carousel -->
</section>
